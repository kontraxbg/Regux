@model IEnumerable<Kontrax.Regux.Public.Portal.Models.ComplaintViewModel>

@*@{ 
    Layout = null;
}*@

<body class="container-fluid">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubmitDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdministrationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncidentDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderPidTypeCode)/@Html.DisplayNameFor(model => model.SenderIdentifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderContact)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.SubmitDateTime)
                </td>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.AdministrationName)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.IncidentDateTime)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.SenderPidTypeCode)/@Html.DisplayFor(modelItem => item.SenderIdentifier)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.SenderNote)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.SenderContact)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
            </tr>
        }

    </table>
</body>
