@using Kontrax.Regux.Model.Account
@model ResetPasswordModel
@{
    ViewBag.Title = string.Empty;
    string title = Model.HasOldPassword ? "Задаване на нова парола" : "Задаване на парола";
    string subtitle = Model.HasOldPassword ? "Изберете нова парола за профила си, която да замени забравената стара." : "Изберете парола за профила си.";
}

@section Subtitle {
    @Html.Partial("_MinistryCouncilHeaderPartial")
}

<div class="h2 row">
    <div class="col-md-offset-2 col-md-10">@title</div>
</div>
<div class="row h4">
    <div class="col-md-offset-2 col-md-10">@subtitle</div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
    <div class="form-horizontal row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.EditorFor(m => m.DisplayName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Задаване" class="btn btn-primary col-md-12" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
